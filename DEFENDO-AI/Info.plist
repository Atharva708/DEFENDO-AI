<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
    <!-- SwiftUI lifecycle does not use SceneDelegate; remove to avoid duplicate plist generation conflicts -->
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UILaunchScreen</key>
	<dict/>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Location Permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>SecureNow needs access to your location to provide emergency services, track your safety, and connect you with nearby security providers.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>SecureNow needs access to your location to provide emergency services, track your safety, and connect you with nearby security providers even when the app is in the background.</string>
	
	<!-- Contact Permissions -->
	<key>NSContactsUsageDescription</key>
	<string>SecureNow needs access to your contacts to set up emergency contacts for SOS alerts.</string>
	
	<!-- Camera Permissions (for future drone viewer) -->
	<key>NSCameraUsageDescription</key>
	<string>SecureNow may need camera access for live drone feed viewing and incident reporting.</string>
	
	<!-- Microphone Permissions (for voice SOS) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>SecureNow needs microphone access for voice-activated SOS alerts and emergency communication.</string>
	
	<!-- Speech Recognition Permissions -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>SecureNow uses speech recognition for voice-activated SOS alerts and hands-free emergency communication.</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>location</string>
		<string>remote-notification</string>
		<string>background-processing</string>
	</array>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>api.securenow.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
			</dict>
		</dict>
	</dict>
	
	<!-- URL Schemes for deep linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.securenow.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>securenow</string>
			</array>
		</dict>
	</array>
	
	<!-- Privacy Policy and Terms -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
</dict>
</plist>
